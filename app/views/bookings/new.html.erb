<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-4 col-md-4 col-sm-offset-4">

      <h2>Make a Booking</h2>

      <%= simple_form_for [@meal, @booking] do |f| %>
      <%= f.input :date, discard_second: true %>
      <%= f.submit "Book", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
