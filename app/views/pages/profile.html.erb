<div class="card-container">
  <% @user.meals.each do |meal| %>
  <div class="card u-clearfix">
    <div class="card-body">

      <h2 class="card-title"><%= meal.name %></h2>
      <span class="card-description subtle"><%= meal.description %></span>
      <% if user_signed_in? %>
        <div class="card-read"><%= link_to "Book", new_meal_booking_path(meal) %></div>
        <span> <%= link_to "edit", edit_meal_path(meal) %>  <%= link_to "delete", meal_path(meal),  method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></span>
      <% end %>
    </div>

      <%= cl_image_tag meal.picture, class: 'card-media' %>
  </div>
  <div class="card-shadow"></div>
  <br>
  <% end %>
