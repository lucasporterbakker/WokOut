<h3>Displaying results for: <%= @query %></h3>

  <!-- <div class="search"> -->
    <%= form_tag search_path, method: :get do %>
    <%= label_tag "Search again?" %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: ""
      %>
    <% end %>
  <!-- </div> -->

<div class="container">
  <div class="row">
<% @meals.each do |meal| %>
  <%= link_to profile_path(meal.user) do %>
    <div class="col-xs-12 col-sm-4">
      <div class = "chefcard"> <%= cl_image_tag meal.picture, height: 300, width: 275, crop: :fill%>
        <div class="chef-avatar"><%= cl_image_tag meal.user.photo%></div>
        <div class="card-text-grouping">
          <h4> <%= meal.user.first_name %> <%= meal.user.last_name %> </h4>
          <h5> <%= meal.name %> </h5>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
            <div class="specialty"><h6>Specialties: <%= meal.category %></h6></div>
        </div>
        </div>
    <% end %>
  </div>

<% end %>
