<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1455619452474-d2be8b1e70cd?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=74ac7c1aa35dc36f50cc1ac7517c70a7&auto=format&fit=crop&w=1650&q=80');">
  <div class="banner-content">
    <h1>WokOut</h1>
    <p>Eat your homecooked heart out with random strangers you invite to your home</p>
    <div class="wrap">
      <div class="search">
        <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Search by Chef or Cuisine"
          %>
          <button type="submit" class="searchButton">
            <i class="fa fa-search"></i>
            <% end %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <main class="page-content">
    <%= render 'chef_intro' %>

    <div class="row" style="margin-bottom:40px;margin-top:50px;">
      <div class="col-xs-10 col-md-2 col-md-offset-5 col-xs-offset-1">
        <button class="btn btn-primary btn-xs" style="width: 100%; padding-top:5px; padding-bottom:5px;font-size:15px;font-weight:700" onclick="$('#indexSearchForm').submit();">Book a Chef  <span class="fa fa-hand-pointer-o" aria-hidden="true"></span></button>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <% @meals.each do |meal| %>
        <%= link_to profile_path(meal.user) do %>
        <div class="col-xs-12 col-sm-4">
          <div class = "chefcard"> <%= cl_image_tag meal.picture, height: 300, width: 275, crop: :fill%>
            <div class="chef-avatar"><%= cl_image_tag meal.user.photo%></div>
            <div class="card-text-grouping">
              <h4> <%= meal.user.first_name %> <%= meal.user.last_name %> </h4>
              <h5> <%= meal.name %> </h5>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <div class="specialty"><h6>Specialties: <%= meal.category %></h6></div>
            </div>
          </div>
          <% end %>
        </div>

        <% end %>


      </div>

      <div class="row" style="margin-bottom:40px;margin-top:50px;">
        <div class="col-xs-10 col-md-2 col-md-offset-5 col-xs-offset-1">
          <button class="btn btn-primary btn-xs" style="width: 100%; padding-top:5px; padding-bottom:5px;font-size:15px;font-weight:700" onclick="$('#indexSearchForm').submit();">Broswe All Chefs <span class="fa fa-hand-pointer-o" aria-hidden="true"></span></button>
        </div>
      </div>

